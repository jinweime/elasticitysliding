<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/scroll_bg"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.jin.mak.elasticitysliding.ElasticScrollView
            android:id="@+id/scroll"
            android:layout_width="match_parent"
            android:layout_height="1200dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="100dp"
            android:background="@drawable/aaa"
            android:orientation="vertical"></com.jin.mak.elasticitysliding.ElasticScrollView>

    </FrameLayout>

    <in.srain.cube.views.ptr.demo.ui.test.ElasticHeadView
        android:id="@+id/headview"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:visibility="gone" />
</RelativeLayout>